{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Projects */

    /* Language and Environment */
    "target": "ESNext",
    "lib": ["ESNext"],

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "paths": {
      "@config/*": ["./src/config/*"],
      "@/*": ["./src/*"]
    },
    "types": ["bun-types"],

    /* JavaScript Support */

    /* Emit */

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
